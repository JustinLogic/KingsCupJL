<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justinlogic.kingscupjl"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kings_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Holo.ButtonBar" >
        <activity
            android:name="com.justinlogic.kingscupjl.TitleScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.justinlogic.kingscupjl.GameplayActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_gameplay"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.justinlogic.kingscupjl.RulesActivity"
            android:label="@string/title_activity_rules" 
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
